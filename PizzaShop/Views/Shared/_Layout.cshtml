@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor httpContextAccessor;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" defer />
    <link href="~/css/Style.css" rel="stylesheet" defer />



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js" defer></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" defer></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js" defer></script>


    <title>_Layout</title>
</head>

<body>
    <header>
        <div class="row">
            <div class="col-md-12">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" />
                </a>
            </div>
        </div>

    </header>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="Home" asp-action="Index">Index</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" asp-controller="Home" asp-action="Cart">Cart</a>
                </li>
                @if (!string.IsNullOrEmpty(httpContextAccessor.HttpContext.Request.Cookies["Customerlogin"]))
                {
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="CustomerProfile" asp-action="EditeProfile">Edite Profile</a>
                    </li>
                }

            </ul>
            <ul class="navbar-nav ml-auto">

                @if (string.IsNullOrEmpty(httpContextAccessor.HttpContext.Request.Cookies["Customerlogin"]))
                {
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Registration" asp-action="RegistarUser">Register</a>
                    </li>
                }
                @if (string.IsNullOrEmpty(httpContextAccessor.HttpContext.Request.Cookies["Customerlogin"]))
                {
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Login" asp-action="Login">Login</a>
                    </li>
                }
                @if (!string.IsNullOrEmpty(httpContextAccessor.HttpContext.Request.Cookies["Customerlogin"]))
                {
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Signout" asp-action="Signout">Sign out</a>
                    </li>
                }


            </ul>
        </div>
    </nav>

    
        
    <div class="customizediv">@RenderBody()</div>
   
    <div id="footer1">
        <h5>Marwan Saadeh Email:marwansaadeh@gmail.com Phone number:0728444144</h5>
    </div>
</body>
</html>